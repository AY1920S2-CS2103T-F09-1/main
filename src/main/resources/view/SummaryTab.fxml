<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<StackPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
  <VBox id="summary-tab" minHeight="300">
    <Label id="saved-text" fx:id="savedText" />
    <Label id="numerical-amount" fx:id="numericalAmount" />
    <HBox>
      <BarChart id="savings-chart" fx:id="savingsChart">
        <xAxis>
          <CategoryAxis id="days-axis" fx:id="daysAxis" />
        </xAxis>
        <yAxis>
          <NumberAxis id="savings-axis" fx:id="savingsAxis" />
        </yAxis>
      </BarChart>
      <VBox>
        <Label id="saveables-text" fx:id="saveablesText" />
        <VBox id="all-saveables"  fx:id="allSaveables" />
      </VBox>
    </HBox>
  </VBox>
</StackPane>
