<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.image.Image?>
<fx:root resizable="false" title="Coupon" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1"
         xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/coupon_stash_32.png"/>
  </icons>
  <scene>
    <Scene>
      <VBox prefHeight="540.0" prefWidth="500.0" style="-fx-background-color: #46998F;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <children>
          <Label alignment="BOTTOM_CENTER" maxWidth="1.7976931348623157E308" prefHeight="100.0" text="Savings"
                 textAlignment="CENTER" wrapText="true" VBox.vgrow="NEVER">
            <padding>
              <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
          </Label>
          <Label alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" prefHeight="50.0" text="Label"
                 textAlignment="CENTER" wrapText="true"/>
          <HBox prefHeight="340.0" prefWidth="500.0">
            <children>
              <VBox prefHeight="340.0" prefWidth="250.0">
                <children>
                  <Label text="Name"/>
                  <Label fx:id="name" alignment="TOP_LEFT" prefHeight="40.0" text="Coupon Name" wrapText="true"/>
                  <Label text="Promo Code"/>
                  <Label fx:id="promoCode" alignment="TOP_LEFT" prefHeight="40.0" text="Coupon Promo Code"
                         wrapText="true"/>
                  <Label text="Duration"/>
                  <Label fx:id="duration" alignment="TOP_LEFT" prefHeight="40.0" text="Coupon Duration"
                         wrapText="true"/>
                  <Label text="Usage"/>
                  <Label fx:id="usage" alignment="TOP_LEFT" prefHeight="40.0" text="Coupon Usage" wrapText="true"/>
                  <Label text="Reminder"/>
                  <Label fx:id="remindDate" alignment="TOP_LEFT" prefHeight="40.0" text="Coupon Reminder"
                         wrapText="true"/>
                  <Label text="Terms &amp; Conditions"/>
                  <Label fx:id="condition" alignment="TOP_LEFT" text="T&amp;C" wrapText="true"/>
                </children>
                <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                </padding>
              </VBox>
              <VBox prefHeight="340.0" prefWidth="250.0">
                <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="History" textAlignment="CENTER"/>
                  <StackPane maxWidth="1.7976931348623157E308" prefHeight="300.0" prefWidth="200.0"
                             style="-fx-background-color: #75BE85; -fx-background-radius: 10;">
                    <children>
                      <TextArea editable="false" maxWidth="1.7976931348623157E308" prefHeight="300.0" prefWidth="200.0"
                                style="-fx-background-color: #75BE85; -fx-background-radius: 15;" wrapText="true"/>
                    </children>
                    <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                  </StackPane>
                </children>
                <padding>
                  <Insets left="10.0" right="10.0" top="10.0"/>
                </padding>
                <opaqueInsets>
                  <Insets/>
                </opaqueInsets>
              </VBox>
            </children>
          </HBox>
          <FlowPane prefHeight="50.0" prefWidth="200.0"/>
        </children>
      </VBox>
    </Scene>
  </scene>
</fx:root>